<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>Hisham Bin Ateya</Authors>
    <Company />
    <Description>Provides lexing and parsing APIs for PO files.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/hishamco/PoParser</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hishamco/PoParser</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageTags>ASP.NET Core, PO, Portable Objects, Parser</PackageTags>
    <PackageReleaseNotes>https://github.com/hishamco/SqlParser/releases</PackageReleaseNotes>
    <PackageId>PoParser.Core</PackageId>
    <Product>Parser for Portable Objects</Product>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Copyright>2021 PoParser</Copyright>
    <AssemblyName>PoParser.Core</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Parlot" Version="0.0.12" />
  </ItemGroup>

</Project>
